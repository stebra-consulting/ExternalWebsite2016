<div id="nyheter" class="container">
    <!-- 1st single news -->
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="col-lg-12">
                <h2 style="color:black">Senaste nytt</h2>
            </div>
        </div>
    </div>
